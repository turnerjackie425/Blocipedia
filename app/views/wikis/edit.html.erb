<div class="container">
  <div class="form-group">
    <h1>Edit Wiki</h1>
      <%= render partial: "form" %>
    <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Wiki?' } %></br>
    <% end %>
  </div>

  <div class="form-group">
    <%= link_to "Return to Wiki's list", wikis_path %>
  </div>
</div>
